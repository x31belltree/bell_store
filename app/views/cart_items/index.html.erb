<div class="col-lg-10 offset-lg-1 space">
  <div class="container-fluid">
    <h1>ショッピングカート</h1>
    <% if @cart_items.any? %>
    
    <div class="float-right mb-3">
      <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: 'btn btn-danger' %>
    </div>

    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
      </thead>
      <tbody>
        <% sum_all = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
            <%= cart_item.product.name %>
            <% end %>
          </td>
          <td>
          <%= cart_item.product.price %>
          </td>
          <td>
            <%= form_with model: cart_item, local: true do |f| %>
            <%= f.number_field :quantity, value: cart_item.quantity, min:1, max:99  %>
            <%= f.submit "変更", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td>
            <%= sum_product = cart_item.product.price.to_i * cart_item.quantity %>円
            <% sum_all += sum_product %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  
    <div class="float-right">
      <h1>合計金額：<%= sum_all %>円</h1>
      <%= link_to "レジへ進む", products_path, class: "btn btn-warning float-right mb-3" %>
      <br>
      <%= link_to '商品一覧へ戻る', products_path, class: "float-right" %>
    </div>
    <% else %>
      <h2><%= 'カートの中身は空です。' %></h2>
    <% end %>


  </div>
</div>