<p>
  <% if @product.image? %>
    <%= image_tag @product.image.to_s %>
  <% else %>
    <image src="/assets/default.png" %>
  <% end %>
</p>

<h5>
  <strong>商品名:</strong>
  <%= @product.name %>
</h5>

<p>
  <strong>商品説明:</strong>
  <%= @product.detail %>
</p>

<p>
  <strong>価格:</strong>
  <%= @product.price %>円
</p>

<p>
  <strong>在庫数:</strong>
  <%= @product.stock %>
</p>
<%= link_to '商品情報を編集', edit_product_path(@product) %> |


<%= form_with(model: [@product, @cart], local: true, url: {controller: 'cart_items', action: 'create'}) do |f| %>
<%= f.label :個数 %>
<%= f.number_field :quantity, value: 1 ,min:1, max:99 %>
<%= f.hidden_field :product_id, value: @product.id  %>
<%= f.submit "カートに入れる", class: "btn btn-danger" %>
<% end %>

<h2>レビュー</h2>
<div class="table-responsive-sm">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>評価</th>
      <th>タイトル</th>
      <th>コメント</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.reviews.each do |review| %>
      <tr>
        <td>
          <%= review.rate %>点
         <!--星評価-->
         <div id="star-rate-<%= review.id %>"></div>
          <script>
          $('#star-rate-<%= review.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= review.rate %>,
          });
          </script>  
        <!--/星評価-->
        </td>
        <td><%= review.name %></td>
        <td><%= review.comment %></td>
        <td><%= User.find_by(id: review.user_id).name %></td>
        <td><%= link_to '詳細', product_review_path(@product,review) %></td>
        <td><%= link_to '編集', edit_product_review_path(@product,review) %></td>
        <td><%= link_to '削除', product_review_path(@product,review), method: :delete, data: { confirm: '本葉に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'レビューを投稿', new_product_review_path(@product) %>
<br>
<%= link_to '商品一覧へ戻る', products_path %>
