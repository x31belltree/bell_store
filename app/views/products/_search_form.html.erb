<%= search_form_for q, url: products_path do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :name_or_detail_cont, class: "form-control", placeholder: 'キーワード' %>
    <%= f.search_field :price_gteq, class: "form-control", placeholder: '円以上' %>〜
    <%= f.search_field :price_lteq, class: "form-control", placeholder: '円以下' %>
    <div class="input-group-append">
      <%= f.submit "検索", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>